{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "baseUrl": "src",
    "esModuleInterop": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"],
    "outDir": "dist",
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"],
}